/**app.wxss**/
/* 全局样式变量 */
page {
  --primary-color: #3e9cfe;
  --primary-light: rgba(62, 156, 254, 0.1);
  --accent-color: #ff6b6b;
  --text-color: #333;
  --text-secondary: #666;
  --bg-color: #f7f7f7;
  --card-bg: #ffffff;
  --border-color: #eee;
  --border-radius: 12rpx;
  --shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  --spacing-xs: 10rpx;
  --spacing-sm: 20rpx;
  --spacing-md: 30rpx;
  --spacing-lg: 40rpx;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
} 

/* 工具页面通用样式 */
.tool-container {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.tool-header {
  margin-bottom: 40rpx;
}

.tool-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.tool-description {
  font-size: 28rpx;
  color: #666;
  display: block;
  line-height: 1.5;
}

.tool-form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.form-input, .form-textarea, .form-picker {
  width: 100%;
  background-color: #f9f9f9;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 24rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #333;
  height: 90rpx;
  line-height: 42rpx;
}

.picker-text {
  line-height: 42rpx;
  color: #333;
  padding: 0 10rpx;
  font-size: 30rpx;
}

.form-radio-group {
  display: flex;
  flex-direction: column;
}

.radio-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 16rpx 0;
}

.radio-text {
  margin-left: 16rpx;
  font-size: 30rpx;
  color: #333;
}

.form-help {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.submit-button {
  background-color: #83e353 !important;
  color: #fff;
  font-weight: bold;
  border-radius: 8rpx;
  margin-top: 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  letter-spacing: 2rpx;
}

.result-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-top: 30rpx;
}

.result-header {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
  margin-bottom: 30rpx;
}

.result-actions {
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.action-button {
  margin-left: 20rpx;
  padding: 10rpx 30rpx;
  font-size: 26rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  color: #666;
  line-height: 1.5;
}
