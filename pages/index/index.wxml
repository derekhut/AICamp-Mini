<view class="container main">
    <!-- 顶部标题 -->
    <view class="header">
        <text class="title">AI教育助手</text>
        <text class="subtitle">助力教学与学习的智能工具</text>
    </view>

    <!-- 分类标签 -->
    <view class="tabs">
        <view class="tab {{activeTab === 0 ? 'active' : ''}}" bindtap="switchTab" data-index="0">智慧课堂</view>
        <view class="tab {{activeTab === 1 ? 'active' : ''}}" bindtap="switchTab" data-index="1">百科大全</view>
        <view class="tab {{activeTab === 2 ? 'active' : ''}}" bindtap="switchTab" data-index="2">创意工坊</view>
        <view class="tab {{activeTab === 3 ? 'active' : ''}}" bindtap="switchTab" data-index="3">心灵成长</view>
    </view>
    
    <!-- 工具列表 -->
    <swiper class="swiper" current="{{activeTab}}" bindchange="swiperChange" style="height: 850rpx;">
        <swiper-item wx:for="{{categories}}" wx:key="id">
            <scroll-view scroll-y class="scroll-view">
                <view class="card-list">
                    <view wx:for="{{item.tools}}" wx:key="id" wx:for-item="tool" bindtap="navigateToTool" data-tool="{{tool.id}}">
                        <mcontent type="block" class="tool-card">
                            <view class="card-inner">
                                <view class="card-title">{{tool.title}}</view>
                                <view class="card-desc">{{tool.description}}</view>
                            </view>
                        </mcontent>
                    </view>
                </view>
            </scroll-view>
        </swiper-item>
    </swiper>

    <!-- 隐藏的AI组件，用于处理对话 -->
    <ai-group id="aiGroup" bindupdatechat="updateChat" style="display:none;"></ai-group>
</view>