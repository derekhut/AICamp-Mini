<view class="page-container">
  <!-- 顶部标题 -->
  <view class="header">
    <text class="title">AI教育助手</text>
    <text class="subtitle">助力教学与学习的智能工具</text>
  </view>

  <!-- 推荐区域 -->
  <view class="recommend-section" wx:if="{{featuredTool}}">
    <view class="section-title">推荐给你</view>
    
    <view class="card featured-card" bindtap="navigateToTool" data-tool="{{featuredTool.id}}">
      <view class="card-tag">Our Pick</view>
      <view class="card-title">{{featuredTool.title}}</view>
      <view class="card-desc">{{featuredTool.description}}</view>
      <view class="card-category">{{featuredTool.categoryName}}</view>
    </view>
  </view>

  <!-- 分类导航 -->
  <view class="category-nav">
    <block wx:for="{{categoryList}}" wx:key="id">
      <view class="category-item {{activeCategory === item.id ? 'active' : ''}}" 
            bindtap="switchCategory" data-category="{{item.id}}">
        {{item.name}}
      </view>
    </block>
  </view>

  <!-- 工具列表 -->
  <view class="tools-section">
    <view class="tools-title">所有工具</view>
    
    <!-- 空状态提示 -->
    <view class="empty-state" wx:if="{{filteredTools.length === 0}}">
      <text>当前分类下暂无工具</text>
    </view>
    
    <!-- 工具卡片列表 -->
    <view class="tools-grid">
      <block wx:for="{{filteredTools}}" wx:key="id">
        <view class="tool-card" bindtap="navigateToTool" data-tool="{{item.id}}">
          <view class="card-tag" wx:if="{{item.featured}}">Our Pick</view>
          <view class="card-title">{{item.title}}</view>
          <view class="card-desc">{{item.description}}</view>
          <view class="card-category">{{item.categoryName}}</view>
        </view>
      </block>
    </view>
  </view>

  <!-- 隐藏的AI组件，用于处理对话 -->
  <ai-group id="aiGroup" bindupdatechat="updateChat" style="display:none;"></ai-group>
</view>