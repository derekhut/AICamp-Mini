/* index.wxss */
.page-container {
  display: flex;
  flex-direction: column;
  padding: var(--spacing-md);
  box-sizing: border-box;
  background-color: var(--bg-color);
  min-height: 100vh;
}

/* 顶部标题样式 */
.header {
  margin-bottom: var(--spacing-md);
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-color);
  display: block;
  margin-bottom: var(--spacing-xs);
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  display: block;
}

/* 推荐区域样式 */
.recommend-section {
  margin-bottom: var(--spacing-lg);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: var(--spacing-sm);
  color: var(--text-color);
}

.featured-card {
  background-color: var(--card-bg);
  border-radius: var(--border-radius);
  padding: var(--spacing-md);
  position: relative;
  box-shadow: var(--shadow);
  margin-bottom: var(--spacing-md);
}

/* 分类导航样式 */
.category-nav {
  display: flex;
  margin-bottom: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
  padding-bottom: 15rpx;
  overflow-x: auto;
}

.category-item {
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  white-space: nowrap;
}

.category-item.active {
  color: var(--primary-color);
  font-weight: bold;
  position: relative;
}

.category-item.active:after {
  content: '';
  position: absolute;
  bottom: -16rpx;
  left: 25%;
  width: 50%;
  height: 6rpx;
  background-color: var(--primary-color);
  border-radius: 3rpx;
}

/* 工具列表样式 */
.tools-section {
  flex: 1;
}

.tools-title {
  font-size: 36rpx;
  font-weight: bold;
  margin: var(--spacing-md) 0 var(--spacing-sm);
  color: var(--text-color);
}

.tools-grid {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.tool-card {
  background-color: var(--card-bg);
  border-radius: var(--border-radius);
  padding: var(--spacing-md);
  position: relative;
  box-shadow: var(--shadow);
}

.card-tag {
  position: absolute;
  top: var(--spacing-sm);
  right: var(--spacing-sm);
  background-color: var(--accent-color);
  color: var(--card-bg);
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: var(--spacing-xs);
  color: var(--text-color);
}

.card-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-sm);
  line-height: 1.5;
}

.card-category {
  display: inline-block;
  font-size: 24rpx;
  color: var(--primary-color);
  background-color: var(--primary-light);
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-lg);
  color: var(--text-secondary);
  font-size: 28rpx;
  text-align: center;
  background-color: var(--card-bg);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow);
  margin: var(--spacing-md) 0;
}

/* 保留原有的聊天气泡样式，以便于ai-group组件使用 */
.chat-bubble {
  display: flex;
  align-items: flex-start;
  margin: 10rpx 0;
}

.left {
  flex-direction: row;
}

.right {
  flex-direction: row-reverse;
}

.main {
  height: 100vh;
  overflow: hidden;
}

.ai-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
