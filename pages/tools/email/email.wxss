/* pages/tools/email/email.wxss */

/* 邮件需求文本框自定义样式 */
.form-textarea {
  min-height: 240rpx !important;
  line-height: 1.6;
  padding: 24rpx;
}

/* 邮件结果内容样式增强 */
.result-content {
  padding: 30rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 加载中状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 邮件内容强调样式 */
.email-heading, .email-signature {
  font-weight: 500;
}

/* 分享按钮特殊样式 */
.action-button.share {
  background-color: #e6f7ff;
  color: #1890ff;
}